<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/White</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textSize">26sp</item>
        <item name="android:colorAccent">@color/colorPrimary</item>

    </style>


    <style name="MyTimePicker" parent="android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:amPmTextColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="CustomTextAppearanceForDay" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTextAppearanceForWeek" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DEDEDE</item>

    </style>
    <style name="CustomTextAppearanceForHeader" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#DEDEDE</item>
    </style>


    <style name="MyCustomPickerTheme" parent="MultiContactPicker.Azure">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="mcpToolbarTheme">@style/MyCustomToolbarTheme</item>
        <item name="mcpListPopupWindowStyleTheme">@style/MyCustomToolbarTheme</item>
    </style>

    <style name="MyCustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>


</resources>