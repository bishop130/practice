<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleModeActivity"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="@color/wall_paper2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginTop="16dp"
        android:background="@color/White"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.제목"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:layout_margin="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_margin="12dp"
            android:hint="제목을 입력하세요"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@color/White"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.장소"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:layout_margin="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/single_mode_search_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도에서 선택 +"
                android:background="@drawable/card_button_shape"
                android:padding="12dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="40dp"

                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@color/White"
        android:layout_marginTop="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.날짜설정"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:layout_margin="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line" />
        <RadioGroup
            android:id="@+id/calendar_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/normal_calendar_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="날짜선택"/>
            <RadioButton
                android:id="@+id/DOW_calendar_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="요일선택"/>
            <RadioButton
                android:id="@+id/period_calendar_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주기선택"/>


        </RadioGroup>

        <FrameLayout
            android:id="@+id/fragment_calendar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:background="@color/White"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.시간선택"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:layout_margin="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간제한 설정"/>

                <Switch
                    android:id="@+id/auto_register_location_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:checked="true"
                    android:switchMinWidth="56dp"
                    android:layout_marginRight="20dp"

                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>


            <TimePicker
                android:id="@+id/time_picker_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"
                android:layout_marginTop="16dp"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:background="@color/White"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.벌칙선택"
            android:textSize="20sp"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구에게 송금"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구에게 선물"/>

        </LinearLayout>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.계좌선택"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            />

    </androidx.cardview.widget.CardView>







</LinearLayout>
</ScrollView>