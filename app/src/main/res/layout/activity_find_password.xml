<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"

    tools:context=".FindPasswordActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 입력"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontFamily="@font/nexon_level2_gothic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="가입하실 때 이용하신 카카오계정 이메일을 입력해주세요."
            app:fontFamily="@font/nexon_level2_gothic" />

        <EditText
            android:id="@+id/et_send_email_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:fontFamily="@font/nexon_level2_gothic" />


        <TextView
            android:id="@+id/tv_send_email_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_rectangle"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:text="인증코드 보내기"
            android:textColor="@color/White"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="인증코드 입력"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:fontFamily="@font/nexon_level2_gothic"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="받으신 메일에 표기된 인증코드를 입력해주세요." />


        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            app:fontFamily="@font/nexon_level2_gothic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/ly_rest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남은시간 :"
                    android:textSize="16sp"
                    app:fontFamily="@font/nexon_level2_gothic" />

                <TextView
                    android:id="@+id/tv_rest_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3분 25초"
                    android:textSize="16sp"

                    app:fontFamily="@font/nexon_level2_gothic" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_rectangle"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="확인"
                android:textColor="@color/White"
                android:textSize="16sp"
                app:fontFamily="@font/nexon_level2_gothic" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>